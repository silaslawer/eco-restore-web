<div class="col-md-2"></div>
<div class="container col-md-8 col-md-offset-2 w3-responsive">
  <h3>Users</h3>
  <br/>
  <table class="container table table-bordered table-striped table-condensed">
    <thead>
    <tr class="w3-blue">
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th colspan="3" scope="col"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-info' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br/>
  <div>
    <%= link_to 'New User', new_user_path, class: 'btn btn-outline-success' %>
    <%#= will_paginate @contacts, class: "w3-card-4 w3-right", renderer: BootstrapPagination::Rails, :params => {:controller => "contacts", :action => "index"} %>
    <br/>
    <br/>
    <br/>
  </div>

</div>
<div class="col-md-2"></div>